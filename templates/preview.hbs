<form autocomplete="off" onsubmit="event.preventDefault();">
  <div class="body">
    <h1>{{asset.name}}</h1>
    <div class="compendium">
      <img src="{{searchResult.fullImg}}" {{#unless pack.hasAccess}}class="preview"{{/unless}}/>
      {{#if description}}
      <div class="overview">
        {{{description}}}
      </div>
      {{/if}}
    </div>
    <div class="infos">
      <ul>
        <li class="main"><b>Creator:</b> <a href="{{information.publisherUrl}}" target="_blank">{{pack.publisher}}</a></li>
        <li class="main"><b>Pack:</b> <a href="{{information.mouliplaceUrl}}" target="_blank">{{pack.name}}</a></li>
        <li>
          {{#if information}}
          <hr>
          <b>{{localize "mtte.requiredTiers"}}</b>:
          <ul>
            {{#each information.tiers as |t|}}
              <li>{{t.title}} ({{t.amount}} $USD)
            {{/each}}
          </ul>
          {{/if}}
        </li>
        {{#unless compatible}}
        <li class="non-compatible">
          <i class="fa-solid fa-triangle-exclamation"></i> {{localize "mtte.notcompatible"}} ({{searchResult.system}})
        </li>
        {{/unless}}
      </ul>
    </div>
    <footer>
      <div class="actions">
        {{#if pack.hasAccess}}
        <button class="import {{#unless compatible}}disabled{{/unless}}" title="{{localize "mtte.importAssetToolTip"}}" {{#unless compatible}}disabled="disabled"{{/unless}}>
          <i class="fas fa-file-import"></i> {{localize "mtte.importAsset"}}
        </button>
        <button class="download" title="{{localize "mtte.downloadImageArtToolTip"}}">
          <i class="fa-solid fa-download"></i> {{localize "mtte.downloadImageArt"}}
        </button>
        {{/if}}
        {{#if information}}
          {{#unless pack.hasAccess}}
          <button class="subscribe"><i class="fas fa-external-link-alt"></i> {{localize "mtte.subscribe"}}</button>
          {{/unless}}
        {{/if}}
        <button class="browsePack" title="{{localize "mtte.browseAssetPackToolTip"}}"><i class="fa-solid fa-folder-open"></i> {{localize "mtte.browseAssetPack"}}</button>
      </div>
    </footer>
  </div>
</form>
